/* components/nav-bar/nav-bar.wxss */
.nav{
    display: flex;
    height: 44px;
    color: #fff;
}

.left, .right, .center{
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav .left, .nav .right {
    width: 120rpx;
}

.nav .center {
    flex: 1;
}

.left .icon{
    width: 40rpx;
    height: 40rpx;
}

.default{
    display: none;
}

.left .default{
    display: flex;
}

.slot:empty + .default{
    display: flex;
}