/* components/song-item/song-item.wxss */
.item {
    display: flex;
    padding: 16rpx 0;
    align-items: center;
}

.image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 16rpx;
}

.info {
    margin-left: 16rpx;
    flex: 1;
}

.info .name {
    font-size: 32rpx;
    color: #555;
}

.info .singer{
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #999;
}