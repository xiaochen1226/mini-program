/* components/song-menu-item/song-menu-item.wxss */
.item {
    display: inline-block;
    width: 100%;
}

.top{
    position: relative;
}

.top .image{
    width: 100%;
    border-radius: 12rpx;
    background-size: cover;
}

.top .count{
    position: absolute;
    right: 0;
    bottom: 10rpx;
    color: #fff;
    font-size: 22rpx;
    background: rgba(0,0,0,.5);
    padding: 6rpx 10rpx;
    border-radius: 12rpx;
}

.item .bottom {
    width: 100%;
    font-size: 26rpx;
    height: 68rpx;

    white-space: normal;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}