<!--components/video-detail-item/video-detail-item.wxml-->
<wxs src="../../utils/format.wxs" module="format"/>

<view class="item">
    <view class="album">
      <image class="image" src="{{itemInfo.coverUrl}}" mode="widthFix"/>
      <view class="info">
        <text class="count">{{format.formatCount(itemInfo.playTime)}}</text>
      </view>
    </view>
    <view class="content">
      <view class="title">{{itemInfo.title}}</view>
      <view class="nickname">{{itemInfo.creator[0].userName}}</view>
    </view>
</view>
