/* pages/music-player/music-player.wxss */
.bg-image, .bg-cover{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.bg-cover {
    background-color: rgba(0, 0, 0, .2);
    backdrop-filter: blur(20px);
}

.tabs{
    display: flex;
    font-size: 28rpx;
    color: #aaa;
}

.tabs .divide{
    margin: 0 8rpx;
}

.tabs .active{
    color: #fff;
}

.music{
    font-size: 28rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 40rpx 60rpx;
}

.music .album{
    flex: 1;
}

.music .album .image{
    width: 100%;
    border-radius: 12rpx;
}
.music .info .name {
    font-size: 48rpx;
    font-weight: 700;

    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.music .info .singer{
    margin-top: 10rpx;
}

.music .lyric{
    margin: 16rpx 0;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.music .proress .time{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
}
.music .proress {
    margin: 12rpx 0;
}
.music .proress .slider{
    margin: 10rpx 8rpx 10rpx 18rpx;
}

.music .controls{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 12rpx 0;
}
.music .controls .btn{
    width: 60rpx;
    height: 60rpx;
}

.music .controls .btn.mode{
    width: 80rpx;
    height: 80rpx;
}

.music .controls .btn.play{
    width: 140rpx;
    height: 140rpx;
}

.lyric-list {
    color: #aaa;
    font-size: 28rpx;
    text-align: center;
    height: 100%;
    box-sizing: border-box;
    padding: 40rpx;
}
.lyric-list .item{
    height: 35px;
    line-height: 35px;
}
.lyric-list .item.active{
    color: #0f0;
    font-size: 32rpx;
}

